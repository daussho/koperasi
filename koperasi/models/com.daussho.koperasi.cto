/**
 * Model for blockchain based koperasi
 */

namespace com.daussho.koperasi

enum UserType {
  o PETUGAS
  o ANGGOTA
}

enum AccountType {
  o TABUNGAN 
  o PINJAMAN
}

enum TransactionType {
  o SETOR
  o TARIK
  o PINJAM
  o ANGSUR
}

participant User identified by userId {
  o String userId
  o String name
  o String address
  o UserType type
}

asset Account identified by accountId {
  o String accountId
  --> User owner
  o Double balance
  o AccountType type
  o DateTime lastUpdate
}

transaction AccountTransaction {
  --> Account account
  o Long txId
  o DateTime timeStamp
  o Double amount
  o TransactionType type
}

